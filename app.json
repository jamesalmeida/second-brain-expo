{
  "expo": {
    "name": "Second Brain - Organized Notes",
    "slug": "second-brain",
    "version": "1.0.0",
    "icon": "./assets/images/icon.png",
    "web": {
      "favicon": "./assets/images/favicon.png",
      "name": "Second Brain"
    },
    "ios": {
      "buildNumber": "1",
      "infoPlist": {
        "UIFileSharingEnabled": true,
        "LSSupportsOpeningDocumentsInPlace": true,
        "UISupportsDocumentBrowser": true,
        "ITSAppUsesNonExemptEncryption": false,
        "NSCalendarsUsageDescription": "This app needs access to your calendar to manage events",
        "NSRemindersUsageDescription": "This app needs access to manage reminders"
      },
      "bundleIdentifier": "com.jamesadev.secondbrain",
      "requireFullScreen": false,
      "supportsTablet": true,
      "userInterfaceStyle": "automatic"
    },
    "extra": {
      "eas": {
        "projectId": "099473b6-1fc9-4247-9cd4-100e9325e2ba"
      }
    },
    "android": {
      "package": "com.jamesadev.secondbrain"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Second Brain to use your location for context when needed.",
          "locationWhenInUsePermission": "Allow Second Brain to use your location for context when needed."
        }
      ]
    ]
  }
}
